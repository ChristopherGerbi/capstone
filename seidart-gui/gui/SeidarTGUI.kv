<ImageInput>:
    size_hint: 0.5, 0.5
    pos_hint: {"x": 0, "y": 0.5}
    name: "image_input"
    TextInput:
        hint_text: "Enter the name of your image"
        multiline: False
        background_color: 1, 1, 1, 1 #color of textbox
        font_size: 16
        pos_hint: {"x":0, "y":0.89}
        size_hint: 0.7, 0.11
        id: file_path
        on_text_validate: root.getImage()
        halign: 'center'
        valign: 'left'

    Button:
        text: "Import Image"
        pos_hint: {"x":0.7, "y":0.89}
        size_hint: 0.3, 0.11
        id: file_input
        on_release: root.getImage()

