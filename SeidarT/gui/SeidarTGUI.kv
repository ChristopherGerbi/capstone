#:kivy 1.11.1 

#Properties of the SeidarTGUI window.
<TotalLayout>:
    name: "total_layout"
    background_color: (2.9,2.9,2.9,2.9)
    tab_height: 25

#PRJ info tab ------------------------------------------------------
<ImageInput>:
    name: "image_input"
    pos_hint: {"x": 0.005, "y": 0.49}
    size_hint: 0.5, 0.5

    TextInput:
        id: file_path
        name: "file_name"
        hint_text: "Enter the name of your image"
        font_size: self.height * 0.65
        multiline: False
        halign: 'left'
        valign: 'top'
        background_color: 1, 1, 1, 1
        foreground_color: 0, 0, 0, 1
        hint_text_color: 0, 0, 0, 0.5
        padding: self.width * 0.02, self.height * 0.1, 0, 0
        pos_hint: {"x":0, "y":0.9}
        size_hint: 0.71, 0.1
        on_text_validate: root.getImage()

    Button:
        name: "import_image_button"
        text: "Import Image"
        pos_hint: {"x":0.72, "y":0.9}
        size_hint: 0.28, 0.1
        id: file_input
        on_release: root.getImage()

<GlacierImage>:
    size_hint: 1, .9
    id: image
    name: "glacier_image"

<DimensionButtons>:
    size_hint: 0.4, 0.1
    pos_hint: {'x': 0.61, 'y': 0.89}
    name: "dimension_button"
    Label:
        text: "Dimensions to be plotted:"
        color: 0,0,0,1
        font_size: 18
        pos_hint: {'x': 0, 'y': 0.5}
        size_hint: 0.55, 0.5
    
    ToggleButton:
        name: "dim_two"
        text: '2'
        pos_hint: {'x': 0.63, 'y':0.5}
        size_hint: 0.1, 0.45
        group: "dimension"
        state: "down"

    ToggleButton:
        text: "2.5"
        pos_hint: {"x": 0.75, "y":0.5}
        size_hint: 0.1, 0.45
        group: "dimension"

<SpacialInformation>:
    name: "spacial_information"
    pos_hint: {'x':0.55, 'y':0.78}
    size_hint: 0.43, 0.14
    
    RelativeLayout:
        canvas:
            Color:
                rgba: 0, 0, 0, 1

            Line:
