<MaterialWindow>:
    size_hint: 0.7, 0.5
    name: "material_window"
    minimum_height: 10
    do_scroll_y: True
    pos_hint: {"y": -.2}

<MaterialBox>:
    name: "material_box"

<MaterialInput>:
    height: 30
    rows: 1
    cols: 7

    canvas:
        Color:
            rgba: 2, 2, 2, 1

        Line:
            width: 1.0
            rectangle: (self.x, self.y, self.width, self.height)
    TextInput:
        name: "material_name"
        hint_text: "Name"
        color: 0,0,0,1
        font_size: self.height - 16
        multiline: False
        halign: 'center'
        valign: 'middle'
    TextInput:
        hint_text: "Temperature"
        name: "material_temperature"
        color: 0,0,0,1
        font_size: self.height - 16
        multiline: False
        halign: 'center'
        valign: 'middle'
    TextInput:
